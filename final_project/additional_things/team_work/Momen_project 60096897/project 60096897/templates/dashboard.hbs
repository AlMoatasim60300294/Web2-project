<!DOCTYPE html>
<html lang="en">
<head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Student Dashboard - CMS</title>
    <link rel="stylesheet" href="/vendors/@coreui/css/coreui.min.css">
    <link rel="stylesheet" href="/vendors/@coreui/icons/css/all.min.css">
</head>
<body>
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
        <div class="sidebar-brand d-none d-md-flex">
            <h3>CMS</h3>
        </div>
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <svg class="nav-icon">
                        <use xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-speedometer"></use>
                    </svg> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-coreui-toggle="modal" data-coreui-target="#requestModal">
                    <svg class="nav-icon">
                        <use xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-note-add"></use>
                    </svg> Submit Request
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">
                    <svg class="nav-icon">
                        <use xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-account-logout"></use>
                    </svg> Logout
                </a>
            </li>
        </ul>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        <!-- Header -->
        <header class="header header-sticky mb-4">
            <div class="container-fluid">
                <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <svg class="icon icon-lg">
                        <use xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-menu"></use>
                    </svg>
                </button>
                <span class="header-text ms-3">Welcome, {{username}}!</span>
            </div>
        </header>

        <!-- Main Content -->
        <div class="body flex-grow-1 px-3">
            <div class="container-lg">
                {{#if message}}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    {{message}}
                    <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}

                <!-- Semester Filter -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/dashboard" method="GET" class="row align-items-center">
                            <div class="col-auto">
                                <label class="form-label mb-0">Filter by Semester:</label>
                            </div>
                            <div class="col-auto">
                                <select name="semester" class="form-select" onchange="this.form.submit()">
                                    <option value="all" {{#if (eq currentSemester "all")}}selected{{/if}}>All Semesters</option>
                                    {{#each semesters}}
                                    <option value="{{this}}" {{#if (eq ../currentSemester this)}}selected{{/if}}>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Requests Table -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>My Requests</strong>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table border mb-0">
                                <thead class="table-light fw-semibold">
                                    <tr>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th>Details</th>
                                        <th>Semester</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each requests}}
                                    <tr>
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>{{this.category}}</td>
                                        <td>{{this.details}}</td>
                                        <td>{{this.semester}}</td>
                                        <td>
                                            <span class="badge bg-{{statusColor this.status}}">
                                                {{this.status}}
                                            </span>
                                        </td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td colspan="5" class="text-center">No requests found</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Request Modal -->
    <div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="requestModalLabel">Submit New Request</h5>
                    <button type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="requestForm" action="/submit-request" method="POST" onsubmit="return validateForm()">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category" required>
                                <option value="">Select a category</option>
                                <option value="course_registration">Course Registration</option>
                                <option value="grade_review">Grade Review</option>
                                <option value="schedule_change">Schedule Change</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Details</label>
                            <textarea class="form-control" name="details" rows="4" required minlength="10"></textarea>
                            <div class="form-text">Please provide at least 10 characters of details.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-coreui-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- CoreUI and necessary plugins-->
    <script src="/vendors/@coreui/coreui/dist/js/coreui.bundle.min.js"></script>
    
    <!-- Client-side validation -->
    <script>
        function validateForm() {
            const details = document.querySelector('textarea[name="details"]').value;
            if (details.length < 10) {
                alert('Please provide more details (minimum 10 characters)');
                return false;
            }
            return true;
        }

        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const dismissBtn = alert.querySelector('.btn-close');
                    if (dismissBtn) {
                        dismissBtn.click();
                    }
                });
            }, 5000);
        });
    </script>
</body>
</html>
