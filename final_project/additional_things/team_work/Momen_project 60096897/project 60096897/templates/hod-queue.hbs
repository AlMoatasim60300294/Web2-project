<div class="container-lg">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Request Queue</strong>
            <div>
                <a href="/hod/dashboard" class="btn btn-sm btn-outline-secondary me-2">
                    <svg class="icon">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-arrow-left"></use>
                    </svg>
                    Back to Dashboard
                </a>
                <a href="/hod/random" class="btn btn-sm btn-info">
                    <svg class="icon">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-random"></use>
                    </svg>
                    Pick Random
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Student</th>
                            <th>Category</th>
                            <th>Details</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each requests}}
                        <tr>
                            <td>{{formatDate this.createdAt}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this.category}}</td>
                            <td>{{truncate this.details 50}}</td>
                            <td><span class="badge bg-{{statusColor this.status}}">{{this.status}}</span></td>
                            <td>
                                <a href="/hod/request/{{this._id}}" class="btn btn-sm btn-primary">
                                    <svg class="icon">
                                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-magnifying-glass"></use>
                                    </svg>
                                    View
                                </a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6" class="text-center">No requests in queue</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>