<div class="container-lg">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Random Request Picker</strong>
            <div>
                <a href="/hod/queue" class="btn btn-sm btn-outline-secondary me-2">
                    <svg class="icon">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-list"></use>
                    </svg>
                    View Queue
                </a>
                <a href="/hod/random" class="btn btn-sm btn-info">
                    <svg class="icon">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-reload"></use>
                    </svg>
                    Pick Another
                </a>
            </div>
        </div>
        <div class="card-body">
            {{#if request}}
            <div class="alert alert-info">
                <svg class="icon me-2">
                    <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-info"></use>
                </svg>
                Here's a random pending request for you to review
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5>From: {{request.username}}</h5>
                    <p><strong>Submitted:</strong> {{formatDate request.createdAt}}</p>
                    <p><strong>Category:</strong> {{request.category}}</p>
                    <p><strong>Details:</strong> {{request.details}}</p>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex">
                <a href="/hod/request/{{request._id}}" class="btn btn-primary me-md-2">
                    <svg class="icon me-2">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-magnifying-glass"></use>
                    </svg>
                    Review Full Details
                </a>
                <a href="/hod/random" class="btn btn-secondary">
                    <svg class="icon me-2">
                        <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-reload"></use>
                    </svg>
                    Pick Another
                </a>
            </div>
            {{else}}
            <div class="alert alert-success">
                <svg class="icon me-2">
                    <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-check"></use>
                </svg>
                No pending requests available at this time.
            </div>
            <a href="/hod/dashboard" class="btn btn-primary">
                <svg class="icon me-2">
                    <use xlink:href="/node_modules/@coreui/icons/sprites/free.svg#cil-arrow-left"></use>
                </svg>
                Back to Dashboard
            </a>
            {{/if}}
        </div>
    </div>
</div>