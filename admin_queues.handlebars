<h2>Request Queues</h2>

<!-- ðŸŽ² Random Request Button -->
<div style="margin-bottom: 15px;">
  <form action="/admin/random-request" method="GET">
    <button type="submit">ðŸŽ² Pick Random Request</button>
  </form>
</div>


<table border="1">
    <tr>
        <th>Category</th>
        <th>Total Requests</th>
        <th>Pending</th>
        <th>Action</th>
    </tr>
    {{#each queueStats}}
    <tr>
        <td>{{@key}}</td>
        <td>{{this.total}}</td>
        <td>{{this.pending}}</td>
        <td>
            <form method="GET" action="/admin/queue/{{@key}}">
                <button type="submit">View</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>
